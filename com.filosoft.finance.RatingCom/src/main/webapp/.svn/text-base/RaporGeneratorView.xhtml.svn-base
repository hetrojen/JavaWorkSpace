<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.prime.com.tr/ui"
	template="templates/mainTemplate.xhtml">

	<ui:define name="center">
	    <p:panel>
	   
	      <h:form id="raporLink">
	      <h:panelGrid id="message">
	        <p:messages></p:messages>
	      </h:panelGrid>
	         <h:panelGrid  rendered="#{raporGenerator.visibleRaporLink}">
	          <h:outputLabel value="Rapor  Oluşturuldu, İndirmek için linke  tıklayınız"></h:outputLabel >
	            <h:outputLink   onclick="openDisclaimer('#{raporGenerator.link}');">
	              <h:outputLabel styleClass ="commandLink"  value="Raporu İndir"></h:outputLabel>
	            </h:outputLink>
	         </h:panelGrid>
	         <h:panelGrid>
	          <h:outputLabel  value="Raporda bulunmasını istediğiniz analizleri seçiniz."></h:outputLabel>
	             <h:selectManyCheckbox layout="pageDirection"  value="#{raporGenerator.selectedRapors}">
	                 <f:selectItem itemValue="1" itemLabel="Değerlendirme Sonucu"></f:selectItem>
	                 <f:selectItem itemValue="2" itemLabel="Dikey Analiz"></f:selectItem>
	                 <f:selectItem itemValue="3" itemLabel="Yatay Analiz"></f:selectItem>
	                 <f:selectItem itemValue="4" itemLabel="Rasyo Analiz Grafik"></f:selectItem>    
	                 <f:selectItem itemValue="5" itemLabel="Rasyo Analiz Rasyo"></f:selectItem> 
	             
	             </h:selectManyCheckbox>
	         
	         <p:commandButton  value="Oluştur" onstart="validateFileInfo.show();" oncomplete="validateFileInfo.hide();" update="raporLink,message" action="#{raporGenerator.raporGenerate}">
	       
	         </p:commandButton>
	         </h:panelGrid>      
	         		<p:dialog fixedCenter="true" resizable="false" closable="false"
				modal="false" draggable="false" widgetVar="validateFileInfo">

				<h:outputLabel value="Rapor oluşturuluyor..."></h:outputLabel>
			
			</p:dialog>
	      </h:form> 	    
	    </p:panel>
	</ui:define>

</ui:composition>